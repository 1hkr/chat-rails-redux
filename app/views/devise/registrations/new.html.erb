 <% if Time.now.hour < 19 && Time.now.hour > 6 %>

 <div class="col-xs-12 col-sm-6 col-lg-6 col-sm-offset-3">

  <div class="devise shadow">

    <h2>Sign Up</h2>

    <%= simple_form_for(resource, html: {class: 'form-inline'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :author, label: 'Username', required: true, autofocus: true, placeholder: 'Call me by your name', input_html: { class: 'no_border shadow padding-form' } %>
      <%= f.input :email, label: 'Email', required: true, autofocus: true, placeholder: 'To send you your password if you lost it', input_html: { class: 'no_border shadow padding-form' } %>
      <%= f.input :password, required: true, placeholder: '******',input_html: { class: 'no_border shadow padding-form' }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, placeholder: '******', input_html: { class: 'no_border shadow padding-form' } %>
    </div>

    <div class="align-h align-v" style="margin-top: 50px">
      <div class="form-actions link-blue">
        <%= f.button :submit, "Sign up" %>
      </div>

      <% end %>

      <div class="align-h align-v">
        <p style="margin: 0"> or </p>
      </div>

      <div class="margin-left-10">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>

<% else %>

<div class="container background-dark-grey">
 <div class="col-xs-12 col-sm-6 col-lg-6 col-sm-offset-3">

  <div class="devise shadow-dark background-mid-grey">

    <h2 class="inner-shadow-dark">Sign Up</h2>

    <%= simple_form_for(resource, html: {class: 'form-inline'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :author, label: 'Username', required: true, autofocus: true, placeholder: 'Call me by your name', input_html: { class: 'no_border padding-form background-mid-grey font-dark' } %>
      <%= f.input :email, label: 'Email', required: true, autofocus: true, placeholder: 'To send you your password if you lost it', input_html: { class: 'no_border padding-form background-mid-grey font-dark' } %>
      <%= f.input :password, required: true, placeholder: '******',input_html: { class: 'no_border padding-form background-mid-grey font-dark' }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, placeholder: '******', input_html: { class: 'no_border padding-form background-mid-grey font-dark' } %>
    </div>

    <div class="align-h align-v" style="margin-top: 50px">
      <div class="form-actions link-blue">
        <%= f.button :submit, "Sign up", class: 'background-mid-grey' %>
      </div>

      <% end %>

      <div class="align-h align-v font-dark">
        <p style="margin: 0"> or </p>
      </div>

      <div class="margin-left-10">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
  </div>
</div>


<% end %>
