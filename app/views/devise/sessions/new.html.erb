 <div class="col-xs-12 col-sm-6 col-lg-6 col-sm-offset-3">

  <div class="devise shadow">

    <h2>Log in</h2>

    <%= simple_form_for(resource, html: {class: 'form-inline'}, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :author, label: 'Username:', placeholder: 'who are you again?', required: false, input_html: { class: 'no_border shadow padding-form' } %>
          <%= f.input :password, label: 'Password:', placeholder: '******', required: false, input_html: { class: 'no_border shadow padding-form' } %>
        </div>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <div class="align-h align-v" style="margin-top: 50px">
      <div class="form-actions link-blue">
        <%= f.button :submit, "Log in" %>
      </div>

      <% end %>

      <div class="align-h align-v">
        <p style="margin: 0"> or </p>
      </div>

      <div class="margin-left-10">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
</div>
